if SHIELD_SOFLE_LEFT

# Just give it a name that shows up in ZMK logs, BLE, etc.
config ZMK_KEYBOARD_NAME
    string
    default "Sofle Left"

# Mark it as a split keyboard
config ZMK_SPLIT
    bool
    default y

# Let this half be the "central" half that connects via USB/BLE
config ZMK_SPLIT_ROLE_CENTRAL
    bool
    default y

# Enable BLE
config ZMK_BLE
    bool
    default y

# If you want the display
config ZMK_DISPLAY
    bool
    default y

# If you have a nice!view OLED
config ZMK_NICE_VIEW_DISPLAY
    bool
    default y

# Enable RGB if you want underglow
config ZMK_RGB_UNDERGLOW
    bool
    default y

config ZMK_RGB_UNDERGLOW_WS2812
    bool
    default y

config ZMK_RGB_UNDERGLOW_COUNT
    int
    default 30

config ZMK_RGB_UNDERGLOW_SPEED
    bool
    default y

config ZMK_RGB_UNDERGLOW_EFFECT_RANGE
    bool
    default y

# Rotary encoder, if needed
config ZMK_BEHAVIOR_ROTARY_ENCODER
    bool
    default y

endif # SHIELD_SOFLE_LEFT
